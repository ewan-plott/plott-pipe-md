{
    "name": "plottcreative/plottos",
    "authors": [
    {
        "name": "Gary Garside",
        "email": "gary@garygarside.com"
    },
    {
        "name": "Ashley Armsstrong",
        "email": "ashley@plott.co.uk"
    }, {
        "name": "Ewan Lockwood",
        "email": "ewan@plott.co.uk"
    }
    ],
    "repositories": {
        "acf": {
            "type": "composer",
            "url": "https://connect.advancedcustomfields.com"
        },
        "gravity": {
            "type": "composer",
            "url": "https://composer.gravity.io"
        },
        "wpackagist": {
            "type": "composer",
            "url": "https://wpackagist.org"
        },
        "plott": {
            "type": "composer",
            "url": "https://plottcreative.repo.repman.io"
        }
    },
    "require": {
        "vlucas/phpdotenv": "^5.4",
        "plott/plottcore-wordpress": "6.9"
    },
    "extra": {
        "wordpress-install-dir": "wordpress"
    },
    "config": {
    "allow-plugins": {
            "composer/installers": true,
            "johnpbloch/wordpress-core-installer": true,
            "ffraenz/private-composer-installer": true,
            "piotrpress/composer-gravityforms": true,
            "plott/plottcore-wp-installer": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "[ -d wordpress ] && rsync -rltD --no-times --exclude 'composer.json' --exclude 'wp-content' wordpress/ ./ && rm -rf wordpress/ || true"
        ],
        "post-update-cmd": [
            "[ -d wordpress ] && rsync -rltD --no-times --exclude 'composer.json' --exclude 'wp-content' wordpress/ ./ && rm -rf wordpress/ || true"
        ],
        "test": [
            "phpcs"
        ]
    }
}
